<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Your Downloads</h1>
            
                <% if (media.length) { %>
                    <div class="row">
                        <% media.forEach(function(media) { %>
                            <div class="col-md-3">
                                <div class="media">
                                    <div class="text-center">
                                        <div>
                                            <img class="img-fluid" src="<%= media.media %>" />
                                        </div>
                                        <h3>
                                            <%= media.title %>
                                        </h3>
                                        <div>Owner : <%= media.user.fullname %></div> 
                                    </div>
                                </div>
                            </div> 
                        <% })%>   
                    </div> 
                <% } else { %>
                    <div> You have no downloads. </div>
                <% } %>     
        </div>
    </div>
</div>