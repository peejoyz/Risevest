<%- include('../partials/header.ejs') %>

<style>
    .container{
        padding: 2em;
    }

    .form-group {
        margin-bottom: 1em;
    }

    .form-group label {
        margin-bottom: 0.2em;
    }

    textarea {
        resize: none;
    }
</style>

<div class="container">
    <h2>Create a folder</h2>

    <form method="POST" action="/folder">
        <div class="form-group">
            <label for="title">Title / Name</label>
            <input type="text" name="title" class="form-control" placeholder="Title">
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <p>
                <textarea class="form-control" cols="20" rows="7" name="desc" placeholder="Description"> </textarea>
            </p>
        </div>

        <button type="submit" class="btn btn-primary">Create</button> <a href="/" class="btn btn-danger">Cancel</a>
    
    </form>

    
</div>
